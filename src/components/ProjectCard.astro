---
export interface Props {
  title: string;
  description: string;
  technologies: string[];
  githubUrl?: string;
  liveUrl?: string;
  imageUrl?: string;
  category?: string;
  categories?: string[];
  readTime?: string;
  slug?: string;
}

const { title, description, technologies, githubUrl, liveUrl, imageUrl, category, categories, readTime, slug } = Astro.props;
function slugify(str: string) {
  return str.toLowerCase().replace(/[^a-z0-9]+/g, '-').replace(/(^-|-$)/g, '');
}
const finalSlug = slug ?? slugify(title);
// Function to determine the project category based on categories and technologies
function determineProjectCategory(categories: string[] = [], technologies: string[] = []) {
  const allCategories = categories.join(' ').toLowerCase();
  const allTechnologies = technologies.join(' ').toLowerCase();
  
  // Data Engineering projects
  if (allCategories.includes('data engineering') || 
      allCategories.includes('business intelligence') ||
      allTechnologies.includes('nifi') ||
      allTechnologies.includes('spark') ||
      allTechnologies.includes('kafka') ||
      allTechnologies.includes('metabase') ||
      allTechnologies.includes('airflow') ||
      allTechnologies.includes('postgresql')) {
    return 'data-engineering';
  }
  
  // Mobile Development projects
  if (allCategories.includes('mobile') ||
      allTechnologies.includes('flutter') ||
      allTechnologies.includes('dart') ||
      allTechnologies.includes('react native') ||
      allTechnologies.includes('swift') ||
      allTechnologies.includes('kotlin')) {
    return 'mobile';
  }
  
  // Web Development projects (includes both web dev and full-stack)
  if (allCategories.includes('web development') ||
      allCategories.includes('full stack') ||
      allTechnologies.includes('react') ||
      allTechnologies.includes('next.js') ||
      allTechnologies.includes('vue') ||
      allTechnologies.includes('angular') ||
      allTechnologies.includes('thymeleaf') ||
      allTechnologies.includes('spring boot') ||
      (allTechnologies.includes('react') && allTechnologies.includes('node')) ||
      (allTechnologies.includes('next.js') && allTechnologies.includes('api'))) {
    return 'web';
  }
  
  // AI/ML projects
  if (allCategories.includes('machine learning') ||
      allCategories.includes('artificial intelligence') ||
      allTechnologies.includes('tensorflow') ||
      allTechnologies.includes('pytorch') ||
      allTechnologies.includes('opencv')) {
    return 'ai';
  }
  
  return 'other';
}

const projectCategory = determineProjectCategory(categories, technologies);

const categoryConfig = {
  'data-engineering': {
    label: 'Data Engineering',
    color: 'bg-blue-500/20 text-blue-300 border-blue-400/30',
    hoverColor: 'hover:shadow-blue-500/20'
  },
  'mobile': {
    label: 'Mobile Development',
    color: 'bg-green-500/20 text-green-300 border-green-400/30',
    hoverColor: 'hover:shadow-green-500/20'
  },
  'web': {
    label: 'Web Development',
    color: 'bg-emerald-500/20 text-emerald-300 border-emerald-400/30',
    hoverColor: 'hover:shadow-emerald-500/20'
  },
  'ai': {
    label: 'AI & Machine Learning',
    color: 'bg-pink-500/20 text-pink-300 border-pink-400/30',
    hoverColor: 'hover:shadow-pink-500/20'
  },
  'other': {
    label: 'Project',
    color: 'bg-gray-500/20 text-gray-300 border-gray-400/30',
    hoverColor: 'hover:shadow-gray-500/20'
  }
};

const currentCategory = categoryConfig[projectCategory as keyof typeof categoryConfig];
---

<div class={`relative group overflow-hidden rounded-xl bg-black/20 backdrop-blur-xl border border-white/10 hover:border-white/20 shadow-2xl ${currentCategory.hoverColor} transition-all duration-300 hover:scale-105 cursor-pointer`} data-aos="fade-up" data-category={projectCategory} data-categories={categories ? categories.join(',').toLowerCase() : projectCategory}>
  
  <!-- Main clickable area -->
  <a href={`/projects/${finalSlug}`} class="block p-6 pb-20 relative z-10">
    <!-- Category Badge and Read Time -->
    <div class="flex items-center justify-between mb-3">
      <span class={`inline-flex items-center px-3 py-1 rounded-full text-xs font-medium ${currentCategory.color} backdrop-blur-sm`}>
        {currentCategory.label}
      </span>
      {readTime && (
        <span class="text-xs text-white/60">
          {readTime}
        </span>
      )}
    </div>
    
    <!-- Title & Description -->
    <h3 class="text-xl font-semibold text-white mb-2">{title}</h3>
    <p class="text-white/70 mb-4 line-clamp-3">{description}</p>
    
    <!-- Read More Indicator -->
    <div class="inline-flex items-center text-sm font-medium text-blue-400 group-hover:text-blue-300 mb-4 transition-colors">
      Read more
      <svg class="w-4 h-4 ml-1 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
      </svg>
    </div>
    
    <!-- Technologies -->
    <div class="flex flex-wrap gap-2">
      {technologies.map((tech) => (
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-md text-xs font-medium bg-white/10 text-white/80 backdrop-blur-sm border border-white/10 hover:bg-white/20 transition-colors">
          {tech}
        </span>
      ))}
    </div>
  </a>
  
  <!-- External Links - positioned absolutely at bottom with reserved space -->
  {(githubUrl || liveUrl) && (
    <div class="absolute bottom-6 left-6 right-6 flex gap-3 z-20">
      {githubUrl && (
        <a 
          href={githubUrl}
          class="inline-flex items-center px-3 py-2 text-sm font-medium text-white/80 bg-white/10 backdrop-blur-sm border border-white/20 rounded-md hover:bg-white/20 hover:text-white transition-all duration-300"
          target="_blank"
          rel="noopener noreferrer"
          onclick="event.stopPropagation()"
        >
          <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.30.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          Code
        </a>
      )}
      
      {liveUrl && (
        <a 
          href={liveUrl}
          class="inline-flex items-center px-3 py-2 text-sm font-medium text-white bg-gradient-to-r from-blue-500 to-purple-600 rounded-md hover:from-blue-600 hover:to-purple-700 transition-all duration-300 shadow-lg hover:shadow-xl transform hover:scale-105"
          target="_blank"
          rel="noopener noreferrer"
          onclick="event.stopPropagation()"
        >
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
          </svg>
          Live Demo
        </a>
      )}
    </div>
  )}
</div>