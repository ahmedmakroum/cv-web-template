---
const currentPath = Astro.url.pathname;
---

<nav class="fixed top-0 w-full bg-black/10 backdrop-blur-md z-50 border-b border-white/10">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-20">
      <!-- Logo -->
      <div class="flex-shrink-0">
          <a href="/" class="text-2xl font-bold bg-gradient-to-r from-blue-400 via-purple-400 to-pink-400 bg-clip-text text-transparent hover:from-pink-400 hover:via-purple-400 hover:to-blue-400 transition-all duration-500">
          Your Name
        </a>
      </div>
      
      <!-- Desktop Navigation -->
      <div class="hidden md:block">
        <div class="flex items-center space-x-1">
          <a 
            href="/" 
            class={`px-4 py-2 rounded-full text-sm font-medium transition-all duration-300 ${
              currentPath === '/' 
                ? 'text-white bg-white/20 backdrop-blur-sm shadow-lg' 
                : 'text-white/80 hover:text-white hover:bg-white/10 backdrop-blur-sm'
            }`}
          >
            Home
          </a>
          <a 
            href="/projects" 
            class={`px-4 py-2 rounded-full text-sm font-medium transition-all duration-300 ${
              currentPath === '/projects' 
                ? 'text-white bg-white/20 backdrop-blur-sm shadow-lg' 
                : 'text-white/80 hover:text-white hover:bg-white/10 backdrop-blur-sm'
            }`}
          >
            Projects
          </a>
          <a 
            href="/blog" 
            class={`px-4 py-2 rounded-full text-sm font-medium transition-all duration-300 ${
              currentPath.startsWith('/blog') 
                ? 'text-white bg-white/20 backdrop-blur-sm shadow-lg' 
                : 'text-white/80 hover:text-white hover:bg-white/10 backdrop-blur-sm'
            }`}
          >
            Blog
          </a>
          <a 
            href="/contact" 
            class={`px-4 py-2 rounded-full text-sm font-medium transition-all duration-300 ${
              currentPath === '/contact' 
                ? 'text-white bg-white/20 backdrop-blur-sm shadow-lg' 
                : 'text-white/80 hover:text-white hover:bg-white/10 backdrop-blur-sm'
            }`}
          >
            Contact
          </a>
        </div>
      </div>
      
      <!-- Action Buttons -->
      <div class="flex items-center space-x-3">
        <!-- Resume Download Button -->
        <a
          href="/your-resume.pdf"
          download
          class="hidden sm:flex items-center space-x-2 px-4 py-2 bg-gradient-to-r from-blue-500 to-purple-600 text-white rounded-full font-medium hover:from-blue-600 hover:to-purple-700 transition-all duration-300 shadow-lg hover:shadow-xl transform hover:scale-105"
          aria-label="Download Resume"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          <span>Resume</span>
        </a>

        <!-- Mobile Resume Button -->
        <a
          href="/your-resume.pdf"
          download
          class="sm:hidden p-2 rounded-full bg-white/10 backdrop-blur-sm text-white hover:bg-white/20 transition-all duration-300"
          aria-label="Download Resume"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
        </a>
        
        <!-- Mobile menu button -->
        <button 
          id="mobile-menu-button"
          class="md:hidden p-2 rounded-full bg-white/10 backdrop-blur-sm text-white hover:bg-white/20 transition-all duration-300"
          aria-label="Toggle mobile menu"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>
  
  <!-- Mobile Navigation -->
  <div id="mobile-menu" class="md:hidden hidden bg-black/20 backdrop-blur-md border-t border-white/10">
    <div class="px-4 pt-4 pb-4 space-y-2">
      <a 
        href="/" 
        class={`block px-4 py-3 rounded-xl text-base font-medium transition-all duration-300 ${
          currentPath === '/' 
            ? 'text-white bg-white/20 backdrop-blur-sm shadow-lg' 
            : 'text-white/80 hover:text-white hover:bg-white/10 backdrop-blur-sm'
        }`}
      >
        Home
      </a>
      <a 
        href="/projects" 
        class={`block px-4 py-3 rounded-xl text-base font-medium transition-all duration-300 ${
          currentPath === '/projects' 
            ? 'text-white bg-white/20 backdrop-blur-sm shadow-lg' 
            : 'text-white/80 hover:text-white hover:bg-white/10 backdrop-blur-sm'
        }`}
      >
        Projects
      </a>
      <a 
        href="/blog" 
        class={`block px-4 py-3 rounded-xl text-base font-medium transition-all duration-300 ${
          currentPath.startsWith('/blog') 
            ? 'text-white bg-white/20 backdrop-blur-sm shadow-lg' 
            : 'text-white/80 hover:text-white hover:bg-white/10 backdrop-blur-sm'
        }`}
      >
        Blog
      </a>
      <a 
        href="/contact" 
        class={`block px-4 py-3 rounded-xl text-base font-medium transition-all duration-300 ${
          currentPath === '/contact' 
            ? 'text-white bg-white/20 backdrop-blur-sm shadow-lg' 
            : 'text-white/80 hover:text-white hover:bg-white/10 backdrop-blur-sm'
        }`}
      >
        Contact
      </a>
    </div>
  </div>
</nav>

<script>
  // Mobile menu logic
  document.addEventListener('DOMContentLoaded', function() {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener('click', function() {
        mobileMenu.classList.toggle('hidden');
      });
    }
  });
</script>