  <!-- Typing Animation Script -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Typing Animation
      const titles = [
        'Software Developer',
        'Problem Solver', 
        'Tech Enthusiast',
        'Lifelong Learner',
        'Creative Thinker',
      ];

      let currentTitle = 0;
      let currentChar = 0;
      let isDeleting = false;
      const typingElement = document.getElementById('typing-text');
      
      function typeWriter() {
        const current = titles[currentTitle];
        
        if (!typingElement) return;
        
        if (isDeleting) {
          typingElement.textContent = current.substring(0, currentChar - 1);
          currentChar--;
        } else {
          typingElement.textContent = current.substring(0, currentChar + 1);
          currentChar++;
        }
        
        let speed = isDeleting ? 50 : 150;
        
        if (!isDeleting && currentChar === current.length) {
          speed = 2000; // Pause at end
          isDeleting = true;
        } else if (isDeleting && currentChar === 0) {
          isDeleting = false;
          currentTitle = (currentTitle + 1) % titles.length;
          speed = 500; // Pause before next word
        }
        
        setTimeout(typeWriter, speed);
      }
      
      typeWriter();
    });

    // Background theme handler
    const mainBg = document.getElementById('main-bg');
    
    // Set initial background based on saved theme
    const savedTheme = localStorage.getItem('backgroundTheme') || '0';
    const themes = ['space', 'lightGlass', 'darkGlass', 'particles', 'geometric'];
    const themeName = themes[parseInt(savedTheme)];
    
    if (mainBg) {
      applyBackgroundTheme(themeName);
    }
    
    // Listen for background theme changes
    window.addEventListener('backgroundThemeChange', function(event) {
      if (mainBg) {
        applyBackgroundTheme(event.detail.theme);
      }
    });
    
    function applyBackgroundTheme(theme) {
      const backgroundClasses = {
        space: 'bg-gradient-to-br from-indigo-900 via-purple-900 to-black',
        lightGlass: 'bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-50',
        darkGlass: 'bg-gradient-to-br from-slate-800 via-gray-800 to-blue-900',
        particles: 'bg-gradient-to-br from-gray-900 via-blue-900 to-indigo-900',
        geometric: 'bg-gradient-to-br from-purple-600 via-blue-600 to-indigo-700'
      };
      
      // Remove all background classes
      Object.values(backgroundClasses).forEach(bgClass => {
        bgClass.split(' ').forEach(cls => mainBg.classList.remove(cls));
      });
      
      // Add the new background class
      if (backgroundClasses[theme]) {
        backgroundClasses[theme].split(' ').forEach(cls => mainBg.classList.add(cls));
      }
      
      // Set body theme class for CSS animations
      document.body.className = `theme-${theme}`;
    }

