    const backgrounds = [
      'radial-gradient(ellipse at top, #1e1b4b 0%, #312e81 25%, #1e1b4b 50%, #0f0f23 75%, #000000 100%)', // Deep Space
      'linear-gradient(135deg, #f8fafc 0%, #e2e8f0 25%, #cbd5e1 50%, #94a3b8 75%, #64748b 100%)', // Light Glass
      'linear-gradient(135deg, #1e293b 0%, #334155 25%, #475569 50%, #64748b 75%, #94a3b8 100%)', // Dark Glass
      'radial-gradient(ellipse at center, #1a1a2e 0%, #16213e 50%, #0f0f23 100%)', // Particles
      'linear-gradient(45deg, #667eea 0%, #764ba2 100%)' // Geometric
    ];

    window.switchBackground = function() {
      console.log('Switch background called!');
      alert('Background switching! Theme: ' + currentBgTheme);
      
      // Find main element
      const main = document.querySelector('main') || document.getElementById('main-bg');
      
      if (main) {
        // Remove ALL existing classes that might interfere (same as working test button)
        main.className = 'min-h-screen transition-all duration-1000 ease-in-out';
        
        // Apply background using the SAME method as the working test button
        const bgColor = backgrounds[currentBgTheme];
        
        // Method 1: CSS Text with !important
        main.style.cssText = `background: ${bgColor} !important; min-height: 100vh; transition: all 1s ease-in-out;`;
        
        // Method 2: Direct property setting
        main.style.setProperty('background', bgColor, 'important');
        
        // Method 3: Also try on body as backup
        document.body.style.setProperty('background', bgColor, 'important');
        
        console.log('Applied background:', bgColor);
        console.log('Main element classes:', main.className);
        console.log('Main element style:', main.style.cssText);
        
        alert('Applied theme: ' + ['Deep Space', 'Light Glass', 'Dark Glass', 'Particles', 'Geometric'][currentBgTheme]);
      } else {
        alert('Could not find main element!');
      }
      
      // Cycle to next theme
      currentBgTheme = (currentBgTheme + 1) % backgrounds.length;
      
      console.log('Next theme will be:', currentBgTheme);
    }
  </script>
