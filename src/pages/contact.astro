---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';
---

<Layout 
  title="Contact | Your Name - Your Professional Title"
  description="Get in touch to discuss your projects and opportunities. Ready to collaborate and create something amazing together."
>
  <main id="main-bg" class="min-h-screen transition-all duration-1000 ease-in-out">

  <!-- Hero Section -->
  <section class="pt-24 pb-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="relative text-center" data-aos="fade-up">
        <h1 class="text-4xl sm:text-5xl font-bold text-white mb-6">
          Let's Work Together
        </h1>
        <p class="text-xl text-white/70 max-w-3xl mx-auto">
          I'm here to help bring your ideas to life. Whether you have a project in mind or just want to connect, 
          let's start a conversation.
        </p>
      </div>
    </div>
  </section>
  
  <!-- Contact Section -->
  <section class="section-padding">
    <div class="max-w-7xl mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Contact Form -->
        <div data-aos="fade-right">
          <div class="relative overflow-hidden rounded-xl bg-black/20 backdrop-blur-xl border border-white/10 hover:border-white/20 shadow-2xl transition-all duration-300 p-8">
            <h2 class="text-2xl font-bold text-white mb-6">
              Send me a message
            </h2>
            
            <form 
              action="https://formsubmit.co/your-email@example.com" 
              method="POST"
              class="space-y-6"
            >
              <!-- Honeypot -->
              <input type="text" name="_honey" class="hidden">
              
              <!-- Disable Captcha -->
              <input type="hidden" name="_captcha" value="false">
              
              <!-- Success Redirect -->
              <!-- Use a relative path so redirects work across previews and production domains -->
              <input type="hidden" name="_next" value="/message-sent/">
              
              <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                <div>
                  <label for="name" class="block text-sm font-medium text-white mb-2">
                    Name *
                  </label>
                  <input 
                    type="text" 
                    id="name" 
                    name="name" 
                    required
                    class="w-full px-4 py-3 border border-white/20 bg-white/10 backdrop-blur-sm rounded-lg focus:ring-2 focus:ring-blue-400 focus:border-blue-400 text-white placeholder-white/60 transition-all duration-300"
                    placeholder="Your name"
                  />
                </div>
                
                <div>
                  <label for="email" class="block text-sm font-medium text-white mb-2">
                    Email *
                  </label>
                  <input 
                    type="email" 
                    id="email" 
                    name="email" 
                    required
                    class="w-full px-4 py-3 border border-white/20 bg-white/10 backdrop-blur-sm rounded-lg focus:ring-2 focus:ring-blue-400 focus:border-blue-400 text-white placeholder-white/60 transition-all duration-300"
                    placeholder="your@email.com"
                  />
                </div>
              </div>
              
              <div>
                <label for="subject" class="block text-sm font-medium text-white mb-2">
                  Subject *
                </label>
                <input 
                  type="text" 
                  id="subject" 
                  name="subject" 
                  required
                  class="w-full px-4 py-3 border border-white/20 bg-white/10 backdrop-blur-sm rounded-lg focus:ring-2 focus:ring-blue-400 focus:border-blue-400 text-white placeholder-white/60 transition-all duration-300"
                  placeholder="What's this about?"
                />
              </div>
              
              <div>
                <label for="message" class="block text-sm font-medium text-white mb-2">
                  Message *
                </label>
                <textarea 
                  id="message" 
                  name="message" 
                  rows="6" 
                  required
                  class="w-full px-4 py-3 border border-white/20 bg-white/10 backdrop-blur-sm rounded-lg focus:ring-2 focus:ring-blue-400 focus:border-blue-400 text-white placeholder-white/60 transition-all duration-300 resize-none"
                  placeholder="Tell me about your project or how I can help..."
                ></textarea>
              </div>
              
              <button 
                type="submit"
                class="w-full bg-white/20 hover:bg-white/30 border border-white/30 hover:border-white/50 text-white font-medium py-4 px-6 rounded-lg backdrop-blur-sm transition-all duration-300 hover:shadow-lg hover:shadow-white/20 flex items-center justify-center text-lg"
              >
                Send Message
                <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
                </svg>
              </button>
            </form>
          </div>
        </div>
        
        <!-- Contact Information -->
        <div class="space-y-8" data-aos="fade-left">
          <!-- Personal Introduction -->
          <div class="relative overflow-hidden rounded-xl bg-black/20 backdrop-blur-xl border border-white/10 hover:border-white/20 shadow-2xl transition-all duration-300 p-8">
            <h2 class="text-2xl font-bold text-white mb-4">
              About Working With Me
            </h2>
            <p class="text-white/70 leading-relaxed mb-6">
              I build data infrastructures and web/mobile applications. My experience spans data engineering, full-stack development, and technology consulting. I focus on delivering practical, scalable solutions.
            </p>
            <p class="text-white/70 leading-relaxed">
              I typically respond to inquiries within 24 hours.
            </p>
          </div>
          
          <!-- Contact Methods -->
          <div class="relative overflow-hidden rounded-xl bg-black/20 backdrop-blur-xl border border-white/10 hover:border-white/20 shadow-2xl transition-all duration-300 p-8">
            <h3 class="text-xl font-semibold text-white mb-6">
              Other Ways to Connect
            </h3>
            
            <div class="space-y-4">
              <a 
                href="mailto:your.email@example.com"
                class="flex items-center p-4 rounded-lg bg-white/10 hover:bg-white/20 border border-white/10 hover:border-white/20 backdrop-blur-sm transition-all duration-300"
              >
                <div class="w-12 h-12 bg-blue-500/20 rounded-lg flex items-center justify-center mr-4">
                  <svg class="w-6 h-6 text-blue-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                </div>
                <div>
                  <h4 class="font-medium text-white">Email</h4>
                  <p class="text-white/70">your.email@example.com</p>
                </div>
              </a>
              
              <a 
                href="https://linkedin.com/in/yourprofile"
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center p-4 rounded-lg bg-white/10 hover:bg-white/20 border border-white/10 hover:border-white/20 backdrop-blur-sm transition-all duration-300"
              >
                <div class="w-12 h-12 bg-blue-500/20 rounded-lg flex items-center justify-center mr-4">
                  <svg class="w-6 h-6 text-blue-300" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  </svg>
                </div>
                <div>
                  <h4 class="font-medium text-white">LinkedIn</h4>
                  <p class="text-white/70">Professional network</p>
                </div>
              </a>
              
              <a 
                href="https://github.com/yourusername"
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center p-4 rounded-lg bg-white/10 hover:bg-white/20 border border-white/10 hover:border-white/20 backdrop-blur-sm transition-all duration-300"
              >
                <div class="w-12 h-12 bg-gray-500/20 rounded-lg flex items-center justify-center mr-4">
                  <svg class="w-6 h-6 text-gray-300" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                </div>
                <div>
                  <h4 class="font-medium text-white">GitHub</h4>
                  <p class="text-white/70">@yourusername</p>
                </div>
              </a>
              
            </div>
          </div>
          
          <!-- CV Download -->
          <div class="relative overflow-hidden rounded-xl bg-black/20 backdrop-blur-xl border border-white/10 hover:border-white/20 shadow-2xl transition-all duration-300 p-8">
            <h3 class="text-xl font-semibold text-white mb-4">
              Download My CV
            </h3>
            <p class="text-white/70 mb-6">
              Get a detailed overview of my experience, skills, and accomplishments.
            </p>
            <div class="flex flex-col sm:flex-row gap-4">
              <a 
                href="/resume"
                class="bg-white/20 hover:bg-white/30 border border-white/30 hover:border-white/50 text-white font-medium py-3 px-6 rounded-lg backdrop-blur-sm transition-all duration-300 hover:shadow-lg hover:shadow-white/20 inline-flex items-center justify-center"
              >
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                </svg>
                View Resume
              </a>
              <a 
                href="/your-resume.pdf"
                download
                class="bg-white/10 hover:bg-white/20 border border-white/20 hover:border-white/30 text-white/90 hover:text-white font-medium py-3 px-6 rounded-lg backdrop-blur-sm transition-all duration-300 inline-flex items-center justify-center"
              >
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                Download CV (PDF)
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Success Message (not used; handled by redirect page) -->
  <div id="success-message" class="hidden fixed inset-0 bg-black/50 backdrop-blur-sm flex items-center justify-center z-50">
    <div class="bg-black/20 backdrop-blur-xl border border-white/10 rounded-lg p-8 max-w-md mx-4 text-center">
      <div class="w-16 h-16 bg-green-500/20 rounded-full flex items-center justify-center mx-auto mb-4">
        <svg class="w-8 h-8 text-green-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
        </svg>
      </div>
      <h3 class="text-xl font-semibold text-white mb-2">Message Sent!</h3>
      <p class="text-white/70 mb-6">
        Thank you for reaching out. I'll get back to you within 24 hours.
      </p>
      <button 
        onclick="document.getElementById('success-message').classList.add('hidden')"
        class="bg-white/20 hover:bg-white/30 border border-white/30 hover:border-white/50 text-white font-medium py-3 px-6 rounded-lg backdrop-blur-sm transition-all duration-300"
      >
        Close
      </button>
    </div>
  </div>
  
  </main>
  <Footer />
</Layout>

<script is:inline>
  document.addEventListener('DOMContentLoaded', function () {
    // Select the contact form that posts to formsubmit.co
    const form = document.querySelector('form[action*="formsubmit.co"]');
    if (!form) return;

    form.addEventListener('submit', async function (e) {
      e.preventDefault();

      // Build FormData from the form
      const formData = new FormData(form);
      const action = form.action;
      const nextInput = form.querySelector('input[name="_next"]');
      const next = nextInput ? nextInput.value : '/message-sent/';

      try {
        const res = await fetch(action, {
          method: 'POST',
          body: formData,
          mode: 'cors',
        });

        if (res.ok) {
          // Redirect to the success page (use relative path)
          window.location.href = next;
        } else {
          // Show a simple error fallback
          console.error('Form submit failed', res.status);
          alert('There was a problem sending your message. Please try again or email directly.');
        }
      } catch (err) {
        console.error('Form submit error', err);
        alert('Network error while sending the message. Please try again later.');
      }
    });
  });
</script>